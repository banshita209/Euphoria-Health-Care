<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<property name="hibernate.show_sql">false</property>
		<property name="hibernate.format_sql">true</property>
		<property name="use_sql_comments">false</property>

		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Euphoria</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>

	
		<property name="hbm2ddl.auto">update</property>
		<mapping class="com.model.Address" />
		<mapping class="com.model.Analysis" />
		<mapping class="com.model.Appointment" />
		<mapping class="com.model.Doctor" />
		<mapping class="com.model.EmergencyServices" />
		<mapping class="com.model.Feedback" />
		<mapping class="com.model.HealthTracker" />
		<mapping class="com.model.MedicalRepresentative" />
		<mapping class="com.model.Meeting" />
		<mapping class="com.model.OTP" />
		<mapping class="com.model.Patient" />
		<mapping class="com.model.Payment" />
		<mapping class="com.model.Pharmacist" />
		<mapping class="com.model.Pharmacy" />
		<mapping class="com.model.Prescription" />
		<mapping class="com.model.Report" />
		<mapping class="com.model.Admin" />
	
	</session-factory>
</hibernate-configuration>